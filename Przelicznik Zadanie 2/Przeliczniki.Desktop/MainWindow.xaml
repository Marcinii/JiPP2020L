                        <Label Foreground="#FFF8F0" FontSize="20">Data do:</Label>
                        <DatePicker x:Name="DataDoWybor" Width="200" Height="30" HorizontalAlignment="Left" Margin="20,0,0,0" Background="#FFCF99" ></DatePicker>

                    </StackPanel>
                </Grid>
                <Grid Grid.Column="1">
                    <StackPanel>
                        <Label Foreground="#FFF8F0" FontSize="20">przelicznik:</Label>
                        <ComboBox x:Name="przelicznikStatystykiWybor" Width="200" Height="30" HorizontalAlignment="Left" Margin="20,0,0,0" Background="#FFCF99" ></ComboBox>
